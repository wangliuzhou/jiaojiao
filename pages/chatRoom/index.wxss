page {
  padding: 0;
}
.wrap {
  height: 100vh;
  box-sizing: border-box;
}
.scroll-view {
  background: #fff6f6;
  height: 100vh;
  padding: 0 0 200rpx 0;
  box-sizing: border-box;
}
.input-box {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 0 48rpx 0;
  background: #fff;
}
.input-box input {
  flex: 1;
}
.input-box .send-btn {
  color: #969696;
  border: 1px solid #eee;
  padding: 16rpx 36rpx;
  border-radius: 12rpx;
  margin-left: 24rpx;
  box-sizing: border-box;
}
.flex {
  flex: 1;
}
.message-box {
  display: flex;
  align-items: flex-end;
}
.message-box .user-info {
  width: 88rpx;
  display: flex;
  flex-direction: column;
}
.user-info image {
  width: 64rpx;
  height: 64rpx;
  margin: 12rpx 12rpx 0 12rpx;
  display: block;
}
.user-info .nick-name {
  font-size: 24rpx;
  white-space: nowrap;
  margin-left: 12rpx;
}
.message {
  background: #02c874;
  padding: 24rpx 48rpx;
  display: inline-block;
  position: relative;
  margin-top: 48rpx;
  font-size: 26rpx;
}
.self {
  margin-left: 200rpx;
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  border-bottom-left-radius: 48rpx;
}
.other {
  margin-right: 200rpx;
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
}
