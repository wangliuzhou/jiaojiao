.user-info {
  background: #bafdb5;
  height: 30vh;
  padding: 48rpx;
  box-sizing: border-box;
}
.user-info .user-info-box {
  display: flex;
  align-items: center;
}
.user-info .user-info-box .user-avatar-box {
  width: 120rpx;
  height: 120rpx;
  background: #ffffff;
  border-radius: 50%;
  overflow: hidden;
}
.user-info .user-info-box .user-avatar-box image {
  width: 100%;
  height: 100%;
}
.user-info .user-info-box .name {
  color: #3d3c3c;
  margin-left: 24rpx;
}
.user-header {
  width: 80rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 50%;
  overflow: hidden;
}
