.user-info {
  background: rgb(186, 253, 181);
  height: 30vh;
  padding: 48rpx;
  box-sizing: border-box;

  .user-info-box {
    display: flex;
    align-items: center;
    .user-avatar-box {
      width: 120rpx;
      height: 120rpx;
      background: #ffffff;
      border-radius: 50%;
      overflow: hidden;

      image {
        width: 100%;
        height: 100%;
      }
    }
    .name {
      color: rgb(61, 60, 60);
      margin-left: 24rpx;
    }
  }
}

.user-header {
  width: 80rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 50%;
  overflow: hidden;
}
