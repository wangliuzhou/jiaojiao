<!-- 发布过的作业可以写 -->

<view>请选择发布作业的方式：</view>
<view>
  <radio-group bindchange="radioChange">
    <label class="radio">
      <radio value="{{0}}" checked="{{true}}" />文字
    </label>
    <label class="radio">
      <radio value="{{1}}" />图片
    </label>
    <label class="radio">
      <radio value="{{2}}" />文件
    </label>
  </radio-group>
</view>

<input
  type="text"
  placeholder="请输入作业内容"
  wx:if="{{radioValue===0}}"
  value="{{inputValue}}"
  bindinput="onInput"
  class="input-class"
/>
<view
  class="choose-btn input-class"
  wx:if="{{radioValue===1}}"
  bindtap="onChooseImage"
>{{imgUrl?"替换图片":"请选择图片"}}</view>
<view
  class="choose-btn input-class"
  wx:if="{{radioValue===2}}"
  bindtap="onChooseMessageFile"
>{{fileUrl?"替换文件":"请选择文件"}}</view>

<image src="{{imgUrl}}" wx:if="{{imgUrl&&radioValue===1}}" />

<view wx:if="{{fileUrl&&radioValue===2}}">
  <image src="./../../assets/image/file_icon.jpg" mode="widthFix" style="width:40rpx" />文件上传成功
</view>

<view wx:if="{{rooms.length}}">
  <view>请选择发布作业的课堂:</view>
  <picker-view
    indicator-style="height: 30px;"
    style="width: 100%; height: 150px;margin-bottom:50rpx"
    value="{{[choosedPickerIdx]}}"
    bindchange="bindRoomIdChange"
  >
    <picker-view-column>
      <view
        wx:for="{{rooms}}"
        wx:key="_id"
        style="line-height: 30px; text-align: center;"
      >{{item.name}}</view>
    </picker-view-column>
  </picker-view>
</view>

<button class="btn" bindtap="handleClickSubmit">发布作业</button>
